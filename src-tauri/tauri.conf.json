{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "purple",
  "version": "0.1.0",
  "identifier": "com.purple.clip",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "purple",
        "width": 300,
        "height": 330,
        "resizable": false,
        "hiddenTitle": true,
        "alwaysOnTop": true,
        "transparent": true,
        "maximizable": false,
        "minimizable": false,
        "decorations": false,
        "windowEffects": {
          "effects": ["popover", "mica"],
          "radius": 9,
          "state": "active"
        }
      }
    ],
    "macOSPrivateApi": true,
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
